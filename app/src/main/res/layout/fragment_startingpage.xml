<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Startingpage">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/blue"
            android:paddingStart="8dp"
            android:text="@string/simple_and_free_note_taking_tool"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="RtlSymmetry" />

        <TextView

            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:text="@string/take_notes_online_without_worrying_about_installing_customizing_learning_getting_used_to_paying_security_privacy_or_anything_else_basically"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/GoTOSignUpPage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintVertical_bias="0.277"
            tools:ignore="RtlSymmetry" />

        <Button
            android:id="@+id/GoToLogInPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="64dp"
            android:backgroundTint="@color/gray"
            android:drawableStart="@drawable/ic_baseline_login_24"
            android:text="@string/login__"
            app:layout_constraintBottom_toTopOf="@+id/landingIcon"
            app:layout_constraintEnd_toStartOf="@+id/GoTOSignUpPage"
            app:layout_constraintHorizontal_bias="0.863"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/GoTOSignUpPage"
            android:layout_width="139dp"
            android:layout_height="51dp"
            android:layout_marginEnd="44dp"
            android:layout_marginBottom="64dp"
            android:backgroundTint="@color/blue"
            android:drawableStart="@drawable/ic_baseline_perm_identity_24"
            android:paddingBottom="10dp"
            android:text="@string/register__"
            app:layout_constraintBottom_toTopOf="@+id/landingIcon"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/landingIcon"
            android:layout_width="316dp"
            android:layout_height="259dp"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="24dp"
            android:src="@drawable/landing_page_art"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
